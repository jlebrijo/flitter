%ul#flits_list
  - @friends.each do |f|
    %li{:class => ("first" if @friends.first == f)}
      = image_tag f.gravatar_url
      .flit_message_container
        = link_to f.username, f.username
        %br
        - @last_status = f.flits.last
        #latest_message
          %strong==Latest: 
          #{@last_status.message}
          #{time_ago_in_words @last_status.created_at} ago
      .clear