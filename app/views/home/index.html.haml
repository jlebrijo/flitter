- title "Welcome #{current_user.username}!!!"

= form_tag flits_path, :id => 'new_flit_form' do
  %h3#form_title== What are you doing?
  %h3#char_count== 140
  .clear
  = text_area_tag :message
  #latest_message
    %strong==Latest: 
    = @last_flit.message
    #{time_ago_in_words @last_flit.created_at} ago
  #submit_button_container
    = submit_tag "Update"
  .clear
  
%ul#flits_list
  - @flits.each do |flit|
    %li{:class => ("first" if @flits.first == flit)}
      = image_tag flit.user.gravatar_url
      .flit_message_container
        = link_to flit.user.username
        #{flit.message}
        .created_at
          #{time_ago_in_words flit.created_at} ago
      .clear
