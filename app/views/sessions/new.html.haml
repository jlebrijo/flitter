- title "Log in"

.container
  .row
    .span4.well
      %legend Please Sign In, or #{link_to "Sign up!", signup_path}
      = form_tag sessions_path do
        = text_field_tag :login, params[:login], {:placeholder => "Username or Email Address", :class => "span4" }
        = password_field_tag :password, nil, {:placeholder => "Password", :class => "span4" }
        %button{:type => "submit", :class => "btn btn-info btn-block"} Log in
