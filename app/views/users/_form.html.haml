.container
  .row
    .span4.well
      %legend 
        - if @user.new_record?
          = "Please Sign Up, or " 
          = link_to('Log in!', login_path)
        - else
          = "Account modification"
      = form_for @user do |f|
        - if f.error_messages
          .alert.alert-error
            %button{:type => "button", :class =>"close", :data => {:dismiss => "alert"}} x
            = f.error_messages
        = f.text_field :username, {:placeholder => "Username", :class => "span4" }
        = f.text_field :email, {:placeholder => "Email", :class => "span4" }
        = f.password_field :password, {:placeholder => "Password", :class => "span4" }
        = f.password_field :password_confirmation, {:placeholder => "Confirm password", :class => "span4" }
        %button{:type => "submit", :class => "btn btn-info btn-block"}
          = (@user.new_record? ? "Sign up" : "Update")